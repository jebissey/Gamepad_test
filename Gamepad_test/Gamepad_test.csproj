    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <Title>Test of GamePad DLL</Title>
    <RepositoryUrl>https://github.com/jebissey/Gamepad_test</RepositoryUrl>
    <PackageTags>C# WPF MVVM gamepad joystick</PackageTags>
